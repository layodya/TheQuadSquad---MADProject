<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.electromartmad">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".updateitem"></activity>
        <activity
            android:name=".itemlist"
            android:label="@string/title_activity_itemlist"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".item" />
        <activity
            android:name=".additem"
            android:label="@string/title_activity_additem"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".rating"
            android:label="@string/title_activity_rating"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".cardpayment"
            android:label="@string/title_activity_cardpayment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".cashpayment"
            android:label="@string/title_activity_cashpayment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".register"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".splash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>